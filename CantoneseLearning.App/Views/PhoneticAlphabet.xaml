<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="viwik.CantoneseLearning.App.Views.PhoneticAlphabet"
             Title="">

    <ContentPage.Resources>
        <Style x:Key="VowelButtonStyle" BasedOn="{StaticResource ConsonantButton}" TargetType="Button">
            <Setter Property="WidthRequest" Value="80" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>

            <Label Text="声母" BackgroundColor="LightBlue" FontSize="18"  FontAttributes="Bold" />

            <Grid x:Name="gvConsonant" Padding="10" RowSpacing="10" ColumnSpacing="2" 
              ColumnDefinitions="*,*,*,*">
            </Grid>

            <Label Text="韵母" BackgroundColor="LightBlue" FontSize="18"  FontAttributes="Bold" Margin="0,5"/>
            
            <Grid  x:Name="gvVowel" Padding="10" RowSpacing="10" ColumnSpacing="2"
                 ColumnDefinitions="*,*,*,*">
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>