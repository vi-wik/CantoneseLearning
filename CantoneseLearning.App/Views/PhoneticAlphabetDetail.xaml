<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
             x:Class="viwik.CantoneseLearning.App.Views.PhoneticAlphabetDetail"
             xmlns:controls="clr-namespace:viwik.CantoneseLearning.App.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="lblDescription" FontSize="12" Margin="5,2" ></Label>
        
        <CollectionView x:Name="lvMedias"  SelectionMode="None" Margin="0,2" Grid.Row="1">           
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:MediaCardView></controls:MediaCardView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>    

</ContentPage>